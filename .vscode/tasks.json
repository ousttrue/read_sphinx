{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "sphinx-autobuild",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/sphinx-autobuild src build --open-browser --port=0",
            "problemMatcher": [],
            "isBackground": true,
            "options": {
                "env": {
                    "PATH": "${workspaceFolder}/.venv/Scripts:${env:PATH}"
                }
            }
        },
        {
            "label": "rebuild",
            "type": "shell",
            "command": "sphinx-build src build -E",
            "problemMatcher": [],
        },
        {
            "label": "sync",
            "type": "shell",
            "command": ".venv/Scripts/python.exe sync.py",
            "problemMatcher": [],
            "isBackground": true,
        }
    ]
}